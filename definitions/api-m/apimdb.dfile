FROM mysql

RUN apt-get update && apt-get install -y \
        unzip \
        wget && \
        cd / && \
        wget https://raw.githubusercontent.com/nuwanbando/wso2-apim-distributed-deployment/master/artifacts/apimdb.sql && \
        wget https://raw.githubusercontent.com/nuwanbando/wso2-apim-distributed-deployment/master/artifacts/userdb.sql && \
        wget https://raw.githubusercontent.com/nuwanbando/wso2-apim-distributed-deployment/master/artifacts/regdb.sql && \
        cp apimdb.sql /docker-entrypoint-initdb.d/ && \
        cp userdb.sql /docker-entrypoint-initdb.d/ && \
        cp regdb.sql /docker-entrypoint-initdb.d/

EXPOSE 3306